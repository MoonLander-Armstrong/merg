<h1>修改課程內容</h1>

<%= form_for(@course) do |form| %>

    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    
    <div>
        <%= form.label :content %>
        <%= form.text_area :content %>
    </div>

    <div>
        <%= form.label :price %>
        <%= form.text_field :price %>
    </div>

    <%= form.submit %>

<% end %>