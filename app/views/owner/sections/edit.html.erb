<h1>編輯Section</h1>

<%= form_with model: @section, url: owner_chapter_section_path(@section.chapter_id, @section.id) do |form| %>

  <div class="field">
    <%= form.label :title, "標題" %>
    <%= form.text_field :title %>
  </div>
  
  <div class="field">
    <%= form.label :media, "上傳影片" %>
    <%= form.file_field :media %>
  </div> 
  
  <div class="field">
    <%= form.label :content, "課程內文" %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.select :published, @section.publishd_state %>
  </div>  

  <%= form.submit "送出" %>
<% end %>