<div class="container">
  <div class="row">
    <div class="item">
      <h2 class="text-2xl font-extrabold leading-6 text-gray-800 focus:outline-none"><%= t('.forgot_your_password') %></h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>
      
        <div class="actions">
          <%= f.submit t('.send_me_reset_password_instructions'), class: "devise_submit_button" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


